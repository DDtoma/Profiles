#                          BORDER      BACKGROUND  TEXT
        focused_workspace  $background $background $darkcyan
        inactive_workspace $background $blue $white
        active_workspace   $background $background $white
        urgent_workspace   $darkcyan   $darkcyan   $background
               
        }
        
}
